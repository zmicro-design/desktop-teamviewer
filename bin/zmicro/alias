#!/bin/bash

export DESKTOP_NAME="teamviewer"
import "$ZMICRO_DESKTOPS_PATH/$DESKTOP_NAME/config"
import "$ZMICRO_DESKTOPS_PATH/$DESKTOP_NAME/core"

help() {
  echo "Usage:"
  echo "  zmicro teamviewer <args ...>"
  echo ""

  teamviewer --help
}

version() {
  teamviewer --version
}

core() {
  # context directory
  local context="$ZMICRO_DESKTOPS_DATA_PATH/teamviewer"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    teamviewer "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
